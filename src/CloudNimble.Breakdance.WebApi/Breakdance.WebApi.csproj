<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net452;net462</TargetFrameworks>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Copyright>Copyright &amp;copy; 2017 CloudNimble</Copyright>
    <Authors>CloudNimble</Authors>
    <Company>CloudNimble</Company>
    <Version>1.0.0-alpha2</Version>
    <PackageProjectUrl>https://github.com/CloudNimble/Breakdance</PackageProjectUrl>
    <RepositoryUrl>https://github.com/CloudNimble/Breakdance</RepositoryUrl>
    <PackageReleaseNotes>- 1.0.0-alpha1: Initial release.</PackageReleaseNotes>
    <PackageTags>unit tests, breakdance, nunit, fluentassertions, odata, webapi, swagger, swashbuckle</PackageTags>
    <Description>Breakdance is a testing framework for managing the dangerous dance of shipping public APIs. This package in particular contains helper classes for testing any WebAPI endpoint. These classes make it super easy to craft HTTP requests to your API at test time.</Description>
    <PackageIconUrl>https://cdn.advancedrei.com/storage/nuget/breakdance.png</PackageIconUrl>
    <IncludeSource>True</IncludeSource>
    <IncludeSymbols>True</IncludeSymbols>
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(MSBuildProjectName).xml</DocumentationFile>
    <RootNamespace>CloudNimble.Breakdance.WebApi</RootNamespace>
    <AssemblyName>CloudNimble.Breakdance.WebApi</AssemblyName>
    <Product>Breakdance for WebAPI</Product>
    <PackageId>Breakdance.WebApi</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNet.WebApi.Core" Version="5.2.3" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' != 'netstandard2.0'">
    <PackageReference Include="System.Net.Http" Version="4.3.2" />
  </ItemGroup>

</Project>
