<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<RootNamespace>CloudNimble.Breakdance.Extensions.MSTest2</RootNamespace>
		<AssemblyName>CloudNimble.Breakdance.Extensions.MSTest2</AssemblyName>
		<TargetFrameworks>netcoreapp3.1;net6.0;netstandard2.0</TargetFrameworks>
		<DocumentationFile>$(DocumentationFile)\$(AssemblyName).xml</DocumentationFile>
	</PropertyGroup>

	<PropertyGroup>
		<PackageId>Breakdance.Extensions.MSTest2</PackageId>
		<Title>Breakdance Extensions for MSTest2</Title>
		<PackageVersion>1.0.0</PackageVersion>
		<Summary>
			Breakdance is a testing framework for managing the dangerous dance of shipping public APIs. This package contains helper classes
			for testing your code with MSTest2.
		</Summary>
		<Description>
			$(Summary)

			Commonly used types:
			Microsoft.VisualStudio.TestTools.UnitTesting.TestContextExtensions
		</Description>
		<PackageTags>$(PackageTags)mstest2;</PackageTags>
		<PackageReleaseNotes>
			1.0.0-alpha1:
			- Initial release.
		</PackageReleaseNotes>

	</PropertyGroup>


	<ItemGroup>
		<PackageReference Include="EasyAF.Core" Version="2.0.0-CI-*" />
		<PackageReference Include="MSTest.TestFramework" Version="[2.*, 3.0.0)" />
	</ItemGroup>

</Project>
